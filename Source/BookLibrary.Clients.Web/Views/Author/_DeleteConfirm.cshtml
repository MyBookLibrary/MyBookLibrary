@model BookLibrary.ViewModels.Author.AuthorMainViewModel

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3>
                Are you sure you want to delete
                @Html.DisplayNameFor(model => model.ModelName)?
            </h3>
        </div>
        <div class="modal-body">
            @Html.LabelFor(x => x.Id) : @Html.DisplayFor(x => x.Id)
            @Html.LabelFor(x => x.FullName) : @Html.DisplayFor(x => x.FullName)
        </div>

        @using (Html.BeginForm("Delete", "Author", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            <div class="modal-footer">
                <button type="reset" class="btn btn-success" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span>
                    Cancel
                </button>
                <button type="submit" id="approve-btn" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Delete
                </button>
            </div>
        }
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#approve-btn').click(function () {
                $('#modal-container').modal('hide');
            });
        });
    </script>
}


